@{
  Layout = "_Layout";
}

@using PierresMarket.Models;

<h1>Welcome to Pierre's Market of Sweets & Treats!</h1>

<hr>

<h4>Flavors</h4>
@if (Model["flavors"].Length == 0)
{
  <p>No flavors have been added yet!</p>
} 
<ul>
  @foreach (Flavor flavor in Model["flavors"])
  {
    <li>@Html.ActionLink(@flavor.FlavorDescription, "Details", "Flavors", new { id = @flavor.FlavorId})</li>
  }
</ul>

<h4>Treats</h4>
@if (Model["treats"].Length == 0)
{
  <p>No treats have been added yet!</p>
} 
<ul>
  @foreach (Treat treat in Model["treats"])
  {
    <li>@Html.ActionLink(@treat.TreatDescription, "Details", "Treats", new { id = @treat.TreatId})</li>
  }
</ul>

<hr>
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add a new flavor", "Create", "Flavors")</p>
  <p>@Html.ActionLink("Add new treat", "Create", "Treats")</p>
  <p>@Html.ActionLink("View flavors", "Index", "Flavors")</p>
  <p>@Html.ActionLink("View treats", "Index", "Treats")</p>
}
<p>Create an Account to Manage Pierre's Flavors & Treats <br>@Html.ActionLink("Register / Manage", "Index", "Account")</p>
<p>Once logged in, come back to the Home page, and access links to View & Manage your Flavors & Treats will be waiting for you!<br>Feel free to paruse our current Flavors and Treats for now, if any of our registered users have created them. </p>
