@{
  Layout = "_Layout";
}

@using PierresMarket.Models;

<h1>Welcome to Pierre's Market of Sweets & Treats!</h1>

<hr>

<h4>Flavors</h4>
@if (Model["flavors"].Length == 0)
{
  <p>No flavors have been added yet!</p>
} 
<ul>
  @foreach (Flavor flavor in Model["flavors"])
  {
    <li>@Html.ActionLink(@flavor.FlavorDescription, "Details", "Flavors", new { id = @flavor.FlavorId})</li>
  }
</ul>

<h4>Treats</h4>
@if (Model["treats"].Length == 0)
{
  <p>No treats have been added yet!</p>
} 
<ul>
  @foreach (Treat treat in Model["treats"])
  {
    <li>@Html.ActionLink(@treat.TreatDescription, "Details", "Treats", new { id = @treat.TreatId})</li>
  }
</ul>

<hr>
<p>Create an Account to Manage Pierre's Flavors & Treats <br>@Html.ActionLink("Register / Manage Account", "Index", "Account")</p>
